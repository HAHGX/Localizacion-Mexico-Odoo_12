        <!-- TIPO DESCUENTO INFONAVIT -->
        <record id="view_hr_tipodescuento" model="ir.ui.view">
            <field name="name">view.hr.tipodescuento</field>
            <field name="model">l10n_mx_payroll.tipodescuento</field>
            <field name="arch" type="xml">
                <form string="Tipo Descuento Infonavit">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="name" colspan="2" />
                            <field name="code" colspan="2" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="act_open_tipodescuento" model="ir.actions.act_window">
            <field name="name">Tipo Descuento Infonavit</field>
            <field name="res_model">l10n_mx_payroll.tipodescuento</field>
