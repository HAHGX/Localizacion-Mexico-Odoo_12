<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_employee_date_view_form" model="ir.ui.view">
            <field name="name">hr.employee.date.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_contract.hr_hr_employee_view_form2"/>
            <field name="arch" type="xml">
                <field name="medic_exam" position="before">
                    <field name="cfdi_date_start"/>
                    <field name="cfdi_date_end"/>
                    <field name="cfdi_anhos_servicio"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_employee_conf_rh_form">
            <field name="name">view_employee_conf_rh_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@name='hr_settings']/group" position="after">
                        <group cols="4" colspan="4">
                            <separator string="Academic Experiences" colspan="4" />
                            <field name="cfdi_academic_ids" context="{'default_employee_id': active_id}" colspan="4" nolabel="1">
                                <tree string="Academic Experiences">
                                    <field name="name" string="Academic Experience"/>
                                    <field name="partner_id" string="Institution"/>
                                    <field name="diploma"/>
                                    <field name="study_field"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </tree>
                                <form string="Academic Experience">
                                    <group name="main" col="4">
                                        <field name="name" string="Academic Experience"/>
                                        <separator string="Dates" colspan="4"/>
                                        <field name="start_date"/>
                                        <field name="expire"/>
                                        <field name="end_date" attrs="{'invisible':[('expire', '=', False)]}"/>
                                        <separator string="Partner" colspan="4"/>
                                        <field name="partner_id" string="Institution"/>
                                        <field name="location"/>
                                        <separator string="Academic Information" colspan="4"/>
                                        <field name="diploma"/>
                                        <field name="study_field"/>
                                        <field name="activities"/>
                                        <separator string="Description" colspan="4"/>
                                        <field name="description" colspan="4" nolabel="1"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                        <hr />
                        <group cols="4" colspan="4">
                            <separator string="Professional Experiences" colspan="4" />
                            <field name="cfdi_experience_ids" context="{'default_employee_id': active_id}" colspan="4" nolabel="1">
                                <tree string="Professional Experiences">
                                    <field name="name" string="Position"/>
                                    <field name="partner_id" string="Employer"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </tree>
                                <form string="Professional Experience">
                                    <sheet>
                                        <group name="main" col="4">
                                            <field name="name" string="Title Job" colspan="4"/>
                                            <separator string="Dates" colspan="4"/>
                                            <field name="start_date"/>
                                            <field name="expire"/>
                                            <field name="end_date" attrs="{'invisible':[('expire', '=', False)]}"/>
                                            <separator string="Partner" colspan="4"/>
                                            <field name="partner_id" string="Employer"/>
                                            <field name="location"/>
                                            <separator string="Description" colspan="4"/>
                                            <field name="description" colspan="4" nolabel="1"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </group>
                        <hr />
                        <group cols="4" colspan="4">
                            <separator string="Courses and Certifications" colspan="4" />
                            <field name="cfdi_certification_ids" context="{'default_employee_id': active_id}" colspan="4" nolabel="1">
                                <tree string="Courses and Certifications">
                                    <field name="category"/>
                                    <field name="name" string="Certification"/>
                                    <field name="certification" string="# Certificate"/>
                                    <field name="partner_id" string="Issued By"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </tree>
                                <form string="Courses and Certifications">
                                    <sheet>
                                        <group name="main" colspan="4">
                                            <group>
                                                <field name="category"/>
                                                <field name="name" string="Certification"/>
                                                <field name="certification" string="# Certification"/>
                                            </group>
                                            <group>
                                                <field name="start_date"/>
                                                <field name="end_date" attrs="{'invisible':[('expire', '=', False)]}"/>
                                                <field name="expire"/>
                                            </group>
                                        </group>
                                        <group name="main" col="4">
                                            <separator string="Partner" colspan="4"/>
                                            <field name="partner_id" string="Issued By"/>
                                            <field name="location"/>
                                            <separator string="Description" colspan="4"/>
                                            <field name="description" colspan="4" nolabel="1"/>
                                        </group>
                                        
                                    </sheet>
                                </form>
                            </field>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>

        <record model="ir.ui.view" id="view_employee_form_hrmxext">
            <field name="name">hr.employee.form.hrmxext</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <div class="oe_title" position="replace">
                        <div class="oe_title">
                            <label for="display_name" class="oe_edit_only"/>
                            <h1>
                                <field name="display_name" placeholder="Employee's Name" class="oe_read_only" />
                                <field name="cfdi_appat" placeholder="Ap. Paterno" required="True" class="oe_edit_only" />
                                <field name="cfdi_apmat" placeholder="Ap. Materno" class="oe_edit_only" />
                                <field name="name" placeholder="Nombre" required="True" class="oe_edit_only"/>
                            </h1>
                        </div>
                    </div>
                    <notebook position="inside">
                        <page string="Other Information">
                            <group cols="4" colspan="4">
                                <group>
                                    <separator string="IFE Anverso" colspan="4"/>
                                    <field name="cfdi_ife_anverso" widget="image" nolabel="1" class="img img-responsive" style="width:60%; height:200px;"/>
                                </group>
                                <group>
                                    <separator string="IFE Reverso" colspan="4"/>
                                    <field name="cfdi_ife_reverso" widget="image" nolabel="1" class="img img-responsive" style="width:60%; height:200px;"/>
                                </group>
                            </group>
                            <group cols="4" colspan="4">
                                <group>
                                    <separator string="Lic. Anverso" colspan="4"/>
                                    <field name="cfdi_licencia_anverso" widget="image" nolabel="1" class="img img-responsive" style="width:60%; height:200px;"/>
                                </group>
                                <group>
                                    <separator string="Lic. Reverso" colspan="4"/>
                                    <field name="cfdi_licencia_reverso" widget="image" nolabel="1" class="img img-responsive" style="width:60%; height:200px;"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </data>
            </field>
        </record>

        <record id="view_empl_contactinformation_form" model="ir.ui.view">
            <field name="name">view_empl_contactinformation_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="work_phone" position="after">
                        <field name="work_phone_ext"/>
                        <field name="last_writedate_job_id" />
                        <field name="last_writedate_sueldo_diario" />
                    </field>
                </data>
            </field>
        </record>
        <record id="view_empl_position_form" model="ir.ui.view">
            <field name="name">view_empl_position_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="job_id" position="after">
                        <field name="cfdi_escolaridad_id"/>
                    </field>
                    <field name="notes" position="before">
                        <separator string="Notes" colspan="4" />
                    </field>
                </data>
            </field>
        </record>

        <record id="view_empl_otherinformation_form" model="ir.ui.view">
            <field name="name">view_empl_otherinformation_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="country_id" position="before">
                        <field name="cfdi_curp"/>
                        <field name="cfdi_rfc"/>
                    </field>
                    <field name="bank_account_id" position="after">
                        <field name="cfdi_payroll_card"/>
                    </field>
                </data>
            </field>
        </record>

        <record id="view_empl_contactinformation_form" model="ir.ui.view">
            <field name="name">view_empl_contactinformation_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="address_home_id" position="before">
                        <field name="cfdi_code_emp"/>
                    </field>
                </data>
            </field>
        </record>

        <record id="view_empl_birth_form" model="ir.ui.view">
            <field name="name">view_empl_birth_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="birthday" position="before">
                        <field name="cfdi_age"/>
                    </field>
                    <field name="country_of_birth" position="after">
                        <field name="state_of_birth" domain="[('country_id','=',country_of_birth)]" />
                    </field>
                </data>
            </field>
        </record>

        <record id="view_empl_hrsettings_form" model="ir.ui.view">
            <field name="name">view_empl_hrsettings_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@name='active_group']" position="after">
                        <group string="Information">
                            <field name="cfdi_tipojornada_id"/>
                            <field name="cfdi_horasjornada" />
                            <field name="cfdi_tipotrabajador_id"/>
                            <field name="cfdi_tiposueldo_id"/>
                            <field name="cfdi_formapago_id"/>
                            <field name="cfdi_zonasalario_id"/>
                            <field name="cfdi_sindicalizado"/>
                        </group>
                        <group string="IMSS">
                            <field name="cfdi_sar"/>
                            <field name="cfdi_imss"/>
                            <field name="cfdi_imss_umf" />
                            <field name="cfdi_ret_imss" />
                        </group>
                        <group string="Infonavit">
                            <field name="cfdi_infonavit"/>
                            <field name="cfdi_alta_infonavit" />
                            <field name="cfdi_tipo_dto_infonavit_id" />
                            <field name="cfdi_dto_infonavit" />
                        </group>
                        <group string="Sueldos">
                            <field name="cfdi_sueldo_diario"/>
                            <field name="cfdi_sueldo_imss" />
                            <field name="cfdi_sueldo_infonavit"/>
                            <field name="cfdi_retiro_parcialidad"/>
                        </group>
                    </xpath>
                    <field name="company_id" position="after">
                        <field name="cfdi_registropatronal_id" invisible="1"/>
                    </field>
                </data>
            </field>
        </record>

        <record model="ir.ui.view" id="view_employee_form_depends">
            <field name="name">hr.employee.form.depends</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='personal_information']/group" position="after">
                    <group colspan="4" col="4" name="depends" string="Depends Information">
                        <field name="cfdi_employee_dependent_ids" colspan="4" nolabel="1">
                            <tree editable="bottom" string="Depends">
                                <field name="sequence" widget="handle" />
                                <field name="type"/>
                                <field name="name"/>
                                <field name="birthday"/>
                                <field name="employee_id" invisible="1"/>
                            </tree>
                            <form string="Depends">
                                <sheet>
                                    <group colspan="4" col="4">
                                        <field name="sequence" invisible="1" />
                                        <field name="employee_id" invisible="1"/>
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="birthday"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_employee_tree_inherit">
            <field name="name">view.employee.tree.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="replace">
                    <field name="display_name"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="hr_kanban_view_employees_inherit">
            <field name="name">employees.kanban.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
            <field name="arch" type="xml">
                <field name="name" position="replace">
                    <field name="display_name"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_employee_filter_inherit">
            <field name="name">view_employee_filter_inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <field name="name" position="replace">
                    <field name="name" 
                        string="Employees" 
                        filter_domain="['|','|','|','|',('work_email','ilike',self),('name','ilike',self),('cfdi_appat','ilike',self),('cfdi_apmat','ilike',self),('cfdi_code_emp','ilike',self)]"/>
                </field>
                <filter name="group_company" position="after">
                    <filter name="group_marital" string="Estado Civil" domain="[]" context="{'group_by':'marital'}"/>
                    <filter name="group_children" string="Numero de hijos" domain="[]" context="{'group_by':'children'}"/>
                    <filter name="group_escolaridad_id" string="Escolaridad" domain="[]" context="{'group_by':'cfdi_escolaridad_id'}"/>
                </filter>
            </field>
        </record>

        <record id="hr_contract_view_days_form" model="ir.ui.view">
            <field name="name">hr.contract.view.days.form</field>
            <field name="model">hr.contract</field>            
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <field name="trial_date_end" position="before">
                    <field name="cfdi_total_days_worked"/>
                </field>
            </field>
        </record>

    </data>
</odoo>