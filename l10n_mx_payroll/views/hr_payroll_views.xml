<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- HR Payroll  -->
        <record model="ir.ui.view" id="hr_salary_rule_cfdi_form">
            <field name="name">hr.salary.rule.cfdi.form</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[1]" position="inside">
                    <group col="4">
                        <separator colspan="4" string="Complemento NÃ³mina SAT"/>
                        <field name="cfdi_tipo_id" colspan="2" />
                        <field name="cfdi_gravado_o_exento" colspan="2" />
                        <field name="cfdi_codigoagrupador_id" domain="[('cfdi_tipo_id', '=', cfdi_tipo_id)]" colspan="2" />
                        <field name="cfdi_tipohoras_id" colspan="2" />
                        <field name="cfdi_agrupacion_id" colspan="2" />
                    </group>
                </xpath>
            </field>
        </record>        
        <record model="ir.ui.view" id="hr_salary_rule_cfdi_list">
            <field name="name">hr.salary.rule.cfdi.list</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_list"/>
            <field name="arch" type="xml">
                <field name="code" position="before">
                    <field name="cfdi_codigoagrupador_id"/>
                </field>
            </field>
        </record>

        <!-- HR Contract  -->
        <record model="ir.ui.view" id="hr_contract_view_cfdi_form">
            <field name="name">hr.contract.view.cfdi.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <field name="type_id" position="after">
                    <field name="cfdi_regimencontratacion_id"/>
                    <field name="is_cfdi" />
                </field>
                <group name="salary_and_advantages" position="after">
                   <group name="eriodicidad_pago" string="Periodicidad de Pago">
                        <label for="cfdi_periodicidadpago_id"/>
                        <div class="o_row" name="cfdi_periodicidadpago_id">
                            <field name="cfdi_periodicidadpago_id" nolabel="1"/>
                        </div>
                    </group>
                </group>
            </field>
        </record>


    </data>
</odoo>